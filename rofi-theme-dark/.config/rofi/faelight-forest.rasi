* {
    /* Colors */
    bg:             #0f1c16;
    bg-alt:         #1a2922;
    fg:             #e8f5d5;
    fg-alt:         #c0cfc5;
    
    accent:         #7fb069;
    accent-alt:     #99c883;
    
    red:            #d47d7d;
    green:          #7fb069;
    yellow:         #d4bc7d;
    blue:           #7d9fd4;
    
    /* Base colors */
    background-color:   transparent;
    text-color:         @fg;
    
    /* Spacing */
    margin:     0;
    padding:    0;
    spacing:    0;
}

window {
    location:           center;
    width:              600;
    background-color:   @bg;
    border:             2px;
    border-color:       @accent;
    border-radius:      12px;
}

mainbox {
    padding:    12px;
}

inputbar {
    background-color:   @bg-alt;
    text-color:         @fg;
    border-radius:      8px;
    padding:            12px 16px;
    spacing:            12px;
    children:           [ prompt, entry ];
}

prompt {
    background-color:   transparent;
    text-color:         @accent;
}

entry {
    background-color:   transparent;
    text-color:         @fg;
    placeholder:        "Search...";
    placeholder-color:  @fg-alt;
}

message {
    margin:             12px 0 0;
    border-radius:      8px;
    border-color:       @bg-alt;
    background-color:   @bg-alt;
}

textbox {
    padding:            8px 12px;
    background-color:   @bg-alt;
    text-color:         @fg;
}

listview {
    background-color:   transparent;
    margin:             12px 0 0;
    lines:              8;
    columns:            1;
    fixed-height:       false;
    scrollbar:          false;
}

element {
    padding:            8px 12px;
    spacing:            8px;
    border-radius:      6px;
    background-color:   transparent;
    text-color:         @fg-alt;
}

element normal.normal {
    background-color:   transparent;
    text-color:         @fg-alt;
}

element selected.normal {
    background-color:   @accent;
    text-color:         @bg;
}

element alternate.normal {
    background-color:   transparent;
    text-color:         @fg-alt;
}

element-icon {
    size:               1em;
    background-color:   transparent;
}

element-text {
    background-color:   transparent;
    text-color:         inherit;
}

mode-switcher {
    spacing:    0;
}

button {
    padding:            8px;
    background-color:   @bg-alt;
    text-color:         @fg-alt;
    border-radius:      6px;
}

button selected {
    background-color:   @accent;
    text-color:         @bg;
}
