#!/usr/bin/env bash
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
# ðŸ“¸ Safe System Update - Faelight Forest
# Creates snapshot, updates system, offers rollback if issues
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

set -e

echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
echo "â•‘        ðŸ“¸ SAFE SYSTEM UPDATE - FAELIGHT FOREST          â•‘"
echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo ""

# Check if running as user (not root)
if [ "$EUID" -eq 0 ]; then
    echo "âŒ Don't run as root! Run as regular user."
    exit 1
fi

# Colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
# ðŸ“Š PRE-UPDATE STATUS
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

echo -e "${CYAN}ðŸ“Š Current System Status:${NC}"
echo ""

# Disk space
echo "ðŸ’¾ Disk Space:"
df -h / | tail -1 | awk '{print "   Used: "$3" / "$2" ("$5")"}'
echo ""

# Check for updates
echo "ðŸ“¦ Checking for updates..."
checkupdates=$(checkupdates 2>/dev/null | wc -l)
aur_updates=$(yay -Qua 2>/dev/null | wc -l)
echo "   Official packages: $checkupdates"
echo "   AUR packages: $aur_updates"
echo ""

if [ "$checkupdates" -eq 0 ] && [ "$aur_updates" -eq 0 ]; then
    echo -e "${GREEN}âœ… System is already up to date!${NC}"
    exit 0
fi

# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
# ðŸ“¸ CREATE PRE-UPDATE SNAPSHOT
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

echo -e "${YELLOW}ðŸ“¸ Creating pre-update snapshot...${NC}"
SNAPSHOT_DESC="Pre-update snapshot $(date +%Y-%m-%d_%H:%M:%S)"

# For now, create a simple backup marker
# (We'll add Snapper integration in Phase 2)
BACKUP_DIR="$HOME/.system-backups"
mkdir -p "$BACKUP_DIR"

# Save package list
echo "   Saving package list..."
pacman -Qqe > "$BACKUP_DIR/pkglist-$(date +%Y%m%d_%H%M%S).txt"

# Save current kernel
CURRENT_KERNEL=$(uname -r)
echo "   Current kernel: $CURRENT_KERNEL"
echo "$CURRENT_KERNEL" > "$BACKUP_DIR/last-kernel.txt"

echo -e "${GREEN}âœ… Pre-update backup created${NC}"
echo ""

# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
# ðŸ”„ SYSTEM UPDATE
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

echo -e "${CYAN}ðŸ”„ Starting System Update...${NC}"
echo ""

read -p "Continue with update? [Y/n]: " -n 1 -r
echo
if [[ ! $REPLY =~ ^[Yy]$ ]] && [[ ! -z $REPLY ]]; then
    echo "Update cancelled."
    exit 0
fi

echo ""
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo ""

# Update system
if yay -Syu; then
    UPDATE_SUCCESS=true
else
    UPDATE_SUCCESS=false
fi

echo ""
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo ""

# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
# âœ… POST-UPDATE STATUS
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

if [ "$UPDATE_SUCCESS" = true ]; then
    echo -e "${GREEN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
    echo -e "${GREEN}â•‘            âœ… UPDATE COMPLETED SUCCESSFULLY!            â•‘${NC}"
    echo -e "${GREEN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo ""
    
    # Check if kernel changed
    NEW_KERNEL=$(pacman -Q linux 2>/dev/null | awk '{print $2}')
    if [ "$CURRENT_KERNEL" != "$(uname -r)" ]; then
        echo -e "${YELLOW}âš ï¸  Kernel updated - reboot recommended${NC}"
        echo ""
        read -p "Reboot now? [y/N]: " -n 1 -r
        echo
        if [[ $REPLY =~ ^[Yy]$ ]]; then
            echo "Rebooting in 5 seconds... (Ctrl+C to cancel)"
            sleep 5
            systemctl reboot
        fi
    fi
    
    # Check for .pacnew files
    echo ""
    echo "ðŸ” Checking for .pacnew files..."
    PACNEW_COUNT=$(sudo find /etc -name "*.pacnew" 2>/dev/null | wc -l)
    if [ "$PACNEW_COUNT" -gt 0 ]; then
        echo -e "${YELLOW}âš ï¸  Found $PACNEW_COUNT .pacnew files${NC}"
        echo "   Run: sudo find /etc -name '*.pacnew'"
    else
        echo "   âœ“ No .pacnew files found"
    fi
    
    echo ""
    echo "ðŸ“Š Updated package list saved to:"
    echo "   $BACKUP_DIR/pkglist-$(date +%Y%m%d)*.txt"
    echo ""
    
else
    echo -e "${RED}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
    echo -e "${RED}â•‘              âŒ UPDATE FAILED!                          â•‘${NC}"
    echo -e "${RED}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo ""
    echo "Pre-update snapshot available for recovery if needed."
    echo "Package list backup: $BACKUP_DIR/"
    exit 1
fi

# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
# ðŸ§¹ CLEANUP
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

echo ""
read -p "Run system cleanup? [Y/n]: " -n 1 -r
echo
if [[ $REPLY =~ ^[Yy]$ ]] || [[ -z $REPLY ]]; then
    echo ""
    if command -v sys-cleanup &> /dev/null; then
        sys-cleanup
    else
        echo "Running basic cleanup..."
        sudo pacman -Sc --noconfirm
        yay -Sc --noconfirm
    fi
fi

echo ""
echo -e "${GREEN}ðŸŒ² Faelight Forest system updated successfully!${NC}"
echo ""
