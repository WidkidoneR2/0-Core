[package]
name = "shell-fish"
version = "3.3.0"
description = "Fish shell configuration with Faelight colors"
category = "shell"

[changelog]
"3.3.0" = "Auto-versioning system added"
"3.2.1" = "Config cleanup, removed duplicates, added Qutebrowser aliases"
"3.2.0" = "Smart update functions added"
"3.1.0" = "Numbered structure aliases"

[files]
managed = [
    ".config/fish/config.fish",
    ".config/fish/functions/dot-doctor.fish",
    ".config/fish/functions/weekly-check.fish",
    ".config/fish/functions/update-check.fish",
    ".config/fish/functions/faelight-version.fish",
    ".config/fish/functions/omarchy-version.fish"
]

[dependencies]
requires = ["prompt-starship"]
optional = ["editor-nvim"]

[metadata]
last_updated = "2025-12-17"
author = "Christian"
blast_radius = "high"

[blast_impact]
failure_modes = [
    "Shell crashes on startup",
    "Lost aliases and functions",
    "Terminal unusable"
]
recovery_path = "bash → cd ~/0-core → git restore shell-fish/"

[retention]
rarely_used = false
justification = "Primary shell environment - essential"
review_date = ""
