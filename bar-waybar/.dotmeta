[package]
name = "bar-waybar"
version = "2.0.0"
description = "Waybar status bar configuration"
category = "desktop"

[changelog]
"2.0.0" = "Tokyo Night theme, modular config"

[files]
managed = [
    ".config/waybar/config.jsonc",
    ".config/waybar/style.css"
]

[dependencies]
requires = ["wm-hypr"]
optional = []

[metadata]
last_updated = "2025-12-17"
author = "Christian"
blast_radius = "high"

[blast_impact]
failure_modes = [
    "No status bar",
    "System info unavailable",
    "Visual feedback lost"
]
recovery_path = "git restore bar-waybar/ && waybar-restart"

[retention]
rarely_used = false
justification = "Essential system status display"
review_date = ""
