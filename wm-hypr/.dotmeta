[package]
name = "wm-hypr"
version = "3.2.0"
description = "Hyprland window manager configuration"
category = "desktop"

[changelog]
"3.2.0" = "Tokyo Night theme, immutable protection era"
"3.1.0" = "Hybrid architecture, numbered structure"

[files]
managed = [
    ".config/hypr/hyprland.conf",
    ".config/hypr/keybinds.conf",
    ".config/hypr/rules.conf",
    ".config/hypr/startup.conf",
    ".config/hypr/monitors.conf",
    ".config/hypr/bindings.conf"
]

[dependencies]
requires = ["bar-waybar", "notif-mako"]
optional = ["theme-gtk"]

[metadata]
last_updated = "2025-12-17"
author = "Christian"
blast_radius = "critical"

[blast_impact]
failure_modes = [
    "Loss of window management",
    "Black screen on login",
    "Session termination",
    "No input handling"
]
recovery_path = "TTY2 → unlock-core → git restore wm-hypr/"

[retention]
rarely_used = false
justification = "Core window manager - absolutely essential"
review_date = ""
